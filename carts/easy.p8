function _init()
 ball={sprt=1,x=60,y=60,hit=7}
 lion={sprt=2,x=60,y=120,hit=7}
 gravity=1
end

function _update60()
	ball.y+=gravity
	if btn(⬅️) then
		lion.x-=0.2
	end
	if btn(➡️) then
		lion.x+=0.2
	end
	
	if ball.y>=122 then
		ball.y=122
	end
	
	if collision(ball,lion) then
		ball.hit=8
		lion.hit=8
	else
		ball.hit=7
		lion.hit=7
	end
end

function _draw()
	cls(0)
 spr(ball.sprt,ball.x,ball.y)
 rect(ball.x,ball.y,ball.x+7,ball.y+7,ball.hit)
 spr(lion.sprt,lion.x,lion.y)
	rect(lion.x,lion.y,lion.x+7,lion.y+7,lion.hit)
end



