function collision(a,b)
	a_top = a.y
	a_bot = a.y+8
	a_left= a.x
	a_right=a.x+8
	
	b_top = b.y
	b_bot = b.y+8
	b_left= b.x
	b_right=b.x+8
	
	if a_top>b_bot then
		return false
	end
	if a_left>b_right then
		return false
	end
	if b_top>a_bot then
		return false
	end
	if b_left>a_right then
		return false
	end
	
	return true
end
